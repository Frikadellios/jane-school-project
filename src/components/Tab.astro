---
import { Image } from 'astro:assets'
import type { ImageMetadata } from 'astro'

export interface Props {
  title: string
  value: string
  image: ImageMetadata
}

const { title, value, image } = Astro.props as Props
---

<div class="w-full overflow-hidden relative h-full rounded-2xl p-10 text-xl md:text-4xl font-bold text-white bg-gradient-to-br from-purple-700 to-violet-900">
    <p>{title}</p>
    <Image
      src={image}
      alt={value}
      class="w-1000 h-1000 object-cover object-left-top h-[60%]  md:h-[90%] absolute -bottom-10 inset-x-0 w-[90%] rounded-xl mx-auto"
    
  >
  <a href='/${value}'><p>{value}</p></a>
</div>